<div class='min-h-screen bg-gradient-to-br from-[#7DAFC7] to-white flex flex-col items-center'>
<h2 class= 'text-white text-4xl mb-8 mt-10 font-mono italic'>Sign In</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "block text-sm font-md leading-5 text-[#4F4F4F]" %><br />
    <%= f.email_field :email, class: 'rounded-full', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-sm font-md leading-5 text-[#4F4F4F]" %><br />
    <%= f.password_field :password, class: 'rounded-full', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions actions flex justify-center">
    <%= f.submit "Log in", class: "bg-[#4F4F4F] w-[150px] text-xl text-center  p-5 m-5 text-white rounded-full bg-opacity-60" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>